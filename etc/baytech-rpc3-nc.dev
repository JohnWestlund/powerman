#
# Baytech RPC3-20NC
#
# Tested the following firmware versions:
#   RPC3-NC Series (C) 2002 by BayTech F4.00
# 
# Note:
#   Type ";;;;;" to access "network interface module".
#   Prompt is not returned until device is ready to accept another commmand.
#
# Assumes:
#   Command confirmation : disabled
#   Status menu : disabled
#   No access control
#
specification "baytech-rpc3-nc" {
	timeout 	10   # about 5 sec for cycle command

	plug name { "1" "2" "3" "4" "5" "6" "7" "8" }

	script login {
		send "\r\n"
		expect ">"
	}
	script logout {
		send "\r\n"
		expect ">"
		send "exit\r\n"
	}
	script status_all {
		send "\r\n"
		expect ">"
		send "status\r\n"
		expect "Circuit Breaker:[^\n]*\r\n"	
		foreachplug {
			expect "([0-9]+)[ ]+: (On|Off)"
			setplugstate $1 $2 on="On" off="Off"
		}
		expect ">"
	}
	script on {
		send "\r\n"
		expect ">"
		send "on %s\r\n"
		expect ">"
	}
	script on_all {
		send "\r\n"
		expect ">"
		send "on 0\r\n"
		expect ">"
	}
	script off {
		send "\r\n"
		expect ">"
		send "off %s\r\n"
		expect ">"
	}
	script off_all {
		send "\r\n"
		expect ">"
		send "off 0\r\n"
		expect ">"
	}
# If outlet is initially off, "reboot" will leave it off.
# This doesn't match PowerMan's semantics for cycle, so explicitly power
# off then on.
	script cycle {
		send "\r\n"
		expect ">"
		send "off %s\r\n"
		expect ">"
		delay 2
		send "on %s\r\n"
		expect ">"
	}
	script cycle_all {
		send "\r\n"
		expect ">"
		send "off 0\r\n"
		expect ">"
		delay 2
		send "on 0\r\n"
		expect ">"
	}
}
