# $Id$
# $Source$
#
# This device configuration supports power control via the 
# 'ipmipower' utility.
#
specification "ipmipower" {
	timeout  	60

	script login {
		expect "ipmipower> "
	}
	script logout {
		send "quit\r"
	}
	script status_all {
		send "stat\r"
                expect "stat\r\n"
		foreachnode {
			expect "([^:]*): (on|off|not\ discovered)\r\n"
			setplugstate $1 $2 off="off" on="on"
		}
		expect "ipmipower> "
	}
	script on {
		send "on %s\r"
		expect "ipmipower> "
	}
	script on_all {
		send "on\r"
		expect "ipmipower> "
	}
	script off {
		send "off %s\r"
		expect "ipmipower> "
	}
	script off_all {
		send "off\r"
		expect "ipmipower> "
	}
	script cycle {
		send "cycle %s\r"
		expect "ipmipower> "
	}
	script cycle_all {
		send "cycle\r"
		expect "ipmipower> "
	}
	script reset {
		send "reset %s\r"
		expect "ipmipower> "
	}
	script reset_all {
		send "reset\r"
		expect "ipmipower> "
	}
}
